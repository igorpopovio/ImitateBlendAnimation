<Window x:Class="ImitateBlendAnimation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImitateBlendAnimation"
        mc:Ignorable="d"
        Title="Imitate Blend Animation"
        Width="400"
        Height="600"
        Background="#FF312949"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate x:Key="WorkSetTemplateKey"
                      DataType="{x:Type local:WorkSet}">
            <StackPanel HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding Mass}"
                               VerticalAlignment="Bottom"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#FF51A8E1" />
                    <TextBlock Margin="10,0,0,0"
                               Padding="2"
                               Text="kg"
                               VerticalAlignment="Bottom"
                               Foreground="#FFA59CC6"
                               FontSize="16" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding Reps}"
                               VerticalAlignment="Bottom"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#FF51A8E1" />
                    <TextBlock Margin="10,0,0,0"
                               Padding="2"
                               Text="reps"
                               VerticalAlignment="Bottom"
                               Foreground="#FFA59CC6"
                               FontSize="16" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#FF4E4473">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <CheckBox Grid.Column="2"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Style="{DynamicResource RoundCheckBoxStyle}"
                  Background="Transparent"
                  BorderBrush="White"
                  BorderThickness="1.5" />
        <TextBlock Grid.Column="1"
                   Text="Set #1"
                   Foreground="#FFA69CC7"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   FontSize="36" />
        <Button Content="Remove Set" />
        <ListView x:Name="listView" Background="Transparent"
                  ItemsSource="{Binding Sets}"
                  ItemTemplate="{DynamicResource WorkSetTemplateKey}"
                  Grid.ColumnSpan="3"
                  Grid.Row="1" />
        <Image Margin="-628.338,-6.139,139.073,-24.861"
               Source="blend-animation.gif"
               Stretch="Fill"
               Grid.RowSpan="2" />
    </Grid>
</Window>
