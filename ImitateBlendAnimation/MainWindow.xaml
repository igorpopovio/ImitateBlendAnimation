<Window x:Class="ImitateBlendAnimation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImitateBlendAnimation"
        mc:Ignorable="d"
        Title="Imitate Blend Animation"
        Width="400"
        Height="600"
        Background="#FF312949"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate x:Key="WorkSetTemplateKey"
                      DataType="{x:Type local:WorkSet}">
            <StackPanel HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding Mass}"
                               VerticalAlignment="Bottom"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#FF51A8E1" />
                    <TextBlock Margin="10,0,0,0"
                               Padding="2"
                               Text="kg"
                               VerticalAlignment="Bottom"
                               Foreground="#FFA59CC6"
                               FontSize="16" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding Reps}"
                               VerticalAlignment="Bottom"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#FF51A8E1" />
                    <TextBlock Margin="10,0,0,0"
                               Padding="2"
                               Text="reps"
                               VerticalAlignment="Bottom"
                               Foreground="#FFA59CC6"
                               FontSize="16" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="Transparent">
        <ListView Background="Transparent"
                  ItemsSource="{Binding Sets}"
                  ItemTemplate="{DynamicResource WorkSetTemplateKey}" />
        <Image Margin="-656.642,0,450.642,121"
               Source="blend-animation.gif"
               Stretch="Fill" />
    </Grid>
</Window>
